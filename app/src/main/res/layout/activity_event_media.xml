<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <EditText
        android:id="@+id/edit_event_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_event_id"
        android:contentDescription="@string/event_id_description"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:textColor="#333333"
        android:textColorHint="#757575" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/upload_media"
        android:contentDescription="@string/upload_media_description"
        android:background="@drawable/rounded_button"
        android:elevation="4dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:contentDescription="@string/loading_description"
        android:indeterminateTint="#6200EA"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/media_list_description"
        android:background="@drawable/rounded_container"
        android:clipToPadding="false"
        android:padding="8dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/back"
        android:contentDescription="@string/back_description"
        android:background="@drawable/rounded_button_secondary"
        android:elevation="4dp"
        android:textColor="#6200EA"
        android:layout_marginTop="16dp" />

</LinearLayout>